<%- include('./../partials/head') -%>
<%- include('./../partials/nav') -%>
<br>

<div class="container">
<br>

<div class="card">

    <div class="card-body" style="background-image: url(/uploads/categories/<%= category.cover %>)">
		<!-- Avatar -->
		<div class="avatar mx-auto white">
			<img src="/uploads/categories/<%= category.image %>" class="rounded-circle" style="width: 250px; height: 250px;">
		</div>
				<!-- Name -->
        <h4 class="card-title"><%= category.name %></h4>
        <p><i class="fa fa-quote-left"></i> <%= category.description %> </p>
    </div>
	
	<div class="card-footer">
		<ul class="nav nav-pills card-header-pills">
		  <li class="nav-item">
			<a class="nav-link" href="#">Timeline</a>
		  </li>
		  <li class="nav-item">
			<a class="nav-link" href="#">About</a>
		  </li>
		  <li class="nav-item">
			<a class="nav-link" href="#">Chat</a>
		  </li>
		</ul>
	</div>
</div>
<!-- Card -->


<br>
	<ul class="list-group">
		<%- include('./../partials/category') -%>
	</ul>
	<br>
	<%- include('./../partials/editor', {categories: [category]}) -%>
	<br>
	<% posts.forEach((post) => { %>
		<%- include('./../partials/post', {post})%>
	<% }); %>

</div>

<%- include('./../partials/end') -%>